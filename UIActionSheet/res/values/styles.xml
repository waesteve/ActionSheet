<?xml version="1.0" encoding="UTF-8"?>
<resources>

	<style name="AppTheme" parent="@android:style/Theme.Light" />

	<style name="AnimBottom" parent="@android:style/Animation">
		<item name="android:windowEnterAnimation">@anim/selectsheet_push_bottom_in</item>
		<item name="android:windowExitAnimation">@anim/selectsheet_push_bottom_out</item>
	</style>

	<style name="PopupAnimation" parent="@android:style/Animation">
		<item name="android:windowEnterAnimation">@anim/selectsheet_push_bottom_in</item>
		<item name="android:windowExitAnimation">@anim/selectsheet_push_bottom_out</item>
	</style>

	<style name="Actionsheet_Theme" parent="@android:style/Theme">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>

</resources>